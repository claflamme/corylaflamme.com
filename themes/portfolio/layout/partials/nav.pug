nav.navbar.navbar-expand-lg.sticky-top.bg-black.navbar-dark.shadow
  .container
    a.sr-only.sr-only-focusable.mr-4.px-3.py-2(href="#content") Skip to main content
    a.navbar-brand.font-weight-bold(href='/')
      strong= site.data.nav.brand
    button.btn.btn-outline-dark.d-lg-none.h1.m-0.text-white.rounded-lg(
      type='button'
      data-toggle='modal'
      data-target='#mobile-nav-content'
      aria-controls='mobile-nav-content'
      aria-label='Toggle navigation'
    )
      i.fas.fa-fw.fa-bars.p-0.m-0(style='line-height: 1;')
    //- Desktop
    .navbar-collapse.collapse
      ul.navbar-nav.ml-auto
        each item in site.data.nav.links
          li.nav-item
            a.nav-link(href=item.link)= item.label
//- Mobile
#mobile-nav-content.modal.p-0(tabindex='-1' role='dialog' aria-label='Navigation' aria-hidden='true')
  .modal-dialog.h-100.mw-100.m-0(role='document')
    .modal-content.h-100.bg-black.border-0.rounded-0
      .modal-header.text-right.border-0
        button.nav-close.btn.btn-outline-dark.text-white.ml-auto.h1(
          type='button' data-dismiss='modal' aria-label='Close Navigation'
        )
          i.fas.fa-fw.fa-times.text-white(aria-hidden='true')
      .modal-body.position-absolute.d-flex.align-items-center.h-100.w-100.text-center.display-2
        ul.navbar-nav.w-100
          - const links = [{label: 'Home', link: '/'}, ...site.data.nav.links]
          each item in links
            li.nav-item.reveal
              a.nav-link.py-3.text-white(href=item.link)= item.label
