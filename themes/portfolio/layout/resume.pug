extends containers/base

block vars
  - const bodyClass = 'bg-light bg-lines-light';
  
block scripts
  script(src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.2.2/pdf.min.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.2.2/pdf_viewer.js")
  != js(['js/resume.js'])

block content
  main(role='main')
    section.py-5.text-center
      .container
        .row
          .col-lg-6.offset-lg-3
            h1.display-3.m-0 Résumé
            a.btn.btn-lg.btn-primary.text-white.my-5(href='/Cory%20LaFlamme%20-%20Resume.pdf' target='_blank')
              | Download as PDF
              i.fas.fa-file-pdf.ml-3
        .row
          .col-lg-10.offset-lg-1
            canvas#resume-canvas.resume-canvas.shadow-lg
